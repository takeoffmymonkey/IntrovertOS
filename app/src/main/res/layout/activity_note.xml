<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/a_note_note_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note name:" />


        <EditText
            android:id="@+id/a_note_note_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Note 1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/a_note_content_editor_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/a_note_cancel_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Cancel" />

        <Button
            android:id="@+id/a_note_save_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/a_note_cancel_b"
            android:text="Save" />


        <Button
            android:id="@+id/a_note_delete_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/a_note_save_b"
            android:text="Delete" />

    </RelativeLayout>


</LinearLayout>



